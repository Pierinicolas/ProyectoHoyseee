<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hoy se juega </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/css/Style_navbar.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ProyectoHsj_alpha.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <div class="container-center">
            <nav class="navbar navbar-expand-sm shadow mb-3">
                <a class="lg" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/css/img/hoysejuegaa.png" alt="Hoy se juega" class="img-fluid" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        
                        @if (User.Identity!.IsAuthenticated)
                        {
                            @if (User.IsInRole("2")) // Admin
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin_home">Admin Panel</a>
                                </li>
                            }
                            else if (User.IsInRole("3")) // Employed
                            {
                                <li class="nav-item">
                                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Admin_home">Employee Panel</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Acces" asp-action="Cerrar">Cerrar sesión</a>
                            </li>
                            
                        }
                        @if (!User.Identity!.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Acces" asp-action="Login">Acceso</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
        </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer>
    <p>© 2024 Tu Empresa. Todos los derechos reservados.</p>
    <p>
        <a href="https://www.instagram.com/hoy_se_juega/">
            <i class="fa-brands fa-instagram"></i>
        </a>
            <a href="https://www.beelup.com/ar/">
                <i class="bi bi-camera-reels"></i> 
            </a>
            <a href="https://www.beelup.com/ar/">
                <i class="bi bi-whatsapp"></i>
            </a>
    </p>
    
    <div style="width: 100%; height: 400px; margin-top: 20px;">
     
           <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3280.4306081480304!2d-58.47679272349987!3d-34.69431746228987!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x95bccf548d3bf9c3%3A0x3356bcb2fd8a5151!2sHoy%20se%20juega%20f%C3%BAtbol%205!5e0!3m2!1ses-419!2sar!4v1725092193081!5m2!1ses-419!2sar" 
           width="300" 
           height="300" 
           style="border:0;" 
           allowfullscreen="" 
           loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
   


      
    </div>
</footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>


