<!-- Carrusel -->
<div id="carouselExample" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="1" aria-label="Slide 2"></button>
        <button type="button" data-bs-target="#carouselExample" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
            <div class="overlay"></div> <!-- Superposición negra -->
            <img src="~/css/img/cancha.jpeg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <div class="overlay"></div>
            <img src="~/css/img/entrada.jpeg" class="d-block w-100" alt="...">
        </div>
        <div class="carousel-item">
            <div class="overlay"></div>
            <img src="~/css/img/cancha y pelota.jpeg" class="d-block w-100" alt="...">
        </div>
        <!-- Botón centrado personalizado -->
        <div class="carousel-caption d-flex justify-content-center align-items-center h-100">
            <a href="/Home/TuPagina" class="btn btn-custom">Reserva Acá</a>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>

<!-- CSS personalizado -->
<style>
    .overlay {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5); /* Color negro con opacidad */
        z-index: 1;
    }

    .carousel-item img {
        position: relative;
        z-index: 0;
    }

    .btn-custom {
        background-color: black;
        color: white;
        border: 2px solid white;
        padding: 10px 20px;
        font-size: 18px;
        text-transform: uppercase;
        z-index: 2;
    }

    .btn-custom:hover {
        background-color: white;
        color: black;
    }

    .carousel-caption {
        z-index: 2;
    }
</style>

